{
    "manifest_version": 2,
    "name": "Simple Link Processor",
    "version": "1.3",
    "description": "Captures a link click and sends it to a backend.",
    "permissions": [
        "tabs",
        "<all_urls>",
        "http://localhost:8000/"
    ],
    "icons": {
        "48": "logo.png",
        "96": "logo.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "48": "logo.png",
            "96": "logo.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}